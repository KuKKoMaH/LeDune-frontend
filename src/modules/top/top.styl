.item
  border: 1px solid $grey
  border-radius: 7px
  padding: 12px
  cf()
  margin-bottom: 1.5em

.image
  width: 56%
  float: left
  img
    display: block
    height: auto
    margin: 0 auto


  @media (max-width: $breakpoint-md - 1)
    width: 100%
    float: none

.content
  width: 44%
  margin-left: 56%
  padding-left: 1.5em
  color: $black

  @media (max-width: $breakpoint-md - 1)
    width: 100%
    margin: 0
    padding: 0

.title
  ffA()
  font-size: 1.2em

  @media (max-width: $breakpoint-md - 1)
    margin-top: .5em

.subtitle
  margin-top: 1em

  @media (max-width: $breakpoint-md - 1)
    margin-top: .3em

.text
  margin-top: 1em

  @media (max-width: $breakpoint-md - 1)
    margin-top: .3em

  b
    font-weight: 400

  &:before
    content: ''
    display: block
    width: 70%
    height: 1px
    background: $gold
    margin-bottom: 1em

    @media (max-width: $breakpoint-md - 1)
      margin-bottom: .3em

.link
  display: inline-block
  margin-top: 1em
  color: $gold

  @media (max-width: $breakpoint-md - 1)
    margin-top: .3em

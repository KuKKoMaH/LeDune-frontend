html
  margin: 0
  padding: 0
  font-family: 'Ubuntu', sans-serif
  font-weight: 300
  font-size: $font-size
  line-height: $line-height

body
  margin: 0
  padding: 0
  //vertical-gradient()

*, *:before, *:after
  box-sizing: border-box

img
  max-width: 100%
  height: auto

a
  color: inherit

  &:hover
    text-decoration: none

b
  font-weight: 400

button, input
  font: inherit

:global
  .r
    font-family: 'Rouble'
    display: inline

  .w
    margin-left: auto
    margin-right: auto
    wrapper()
    @media (min-width: $breakpoint-sm) and (max-width $breakpoint-md - 1)
      width: $container-sm
    @media (min-width: $breakpoint-md) and (max-width $breakpoint-lg - 1)
      width: $container-md
    @media (min-width: $breakpoint-lg)
      width: $container-lg

  .wf
    wrapper()
    margin-left: -($gutter-half)
    margin-right: -($gutter-half)

    &:after
      content: ''
      display: table
      clear: both

  .wc
    .c
      vertical-align: middle

  .c
    col()

  for $col in (1..$cols-number)
    .c{$col}
      @media (min-width: $breakpoint-sm)
        width: round((100 / $cols-number * $col)%, 3)

@import "magnific-popup/dist/magnific-popup.css"

.wrapper
  display: none

.block
  max-width: 460px
  margin: 0 auto
  background: #645b4e
  border-radius: 3px
  padding: 50px 37px 40px
  text-align: center
  position: relative

  :global
    .mfp-close
      color: #ffffff

    .screen-reader-response
      display: none

    .wpcf7-form-control-wrap
      position: static

    .wpcf7-not-valid-tip
      position: absolute
      font-size: 14px
      color: #fff
      top: 100%
      width: 100%

    .wpcf7-response-output
      font-size: 15px
      color: #ffffff
      border-radius: 4px
      margin-top: 8px

.title
  ffA()
  color: #ddbc88
  font-size: 43px
  line-height: 1.1

.text
  font-weight: 300
  color: #ffffff
  font-size: 17px

  &:before, &:after
    content: ''
    display: block
    max-width: 320px
    height: 1px
    margin: 28px auto
    background: #ddbc88

.input-wrapper
  position: relative
  margin-bottom: 40px

  &:before
    content: "+7";
    border-right: 1px solid #CBCBCB
    position: absolute;
    color: #898989
    font-size: 18px
    height: 100%;
    width: 50px
    line-height: 51px
    text-align: center;
    pointer-events: none
    z-index: 1

.input
  font-size: 18px
  line-height: 1
  color: #898989
  background: #ffffff
  padding: 15px 0 15px 60px
  border: 0
  width: 100%
  max-width: 320px
  margin: 0 auto
  border-radius: 4px
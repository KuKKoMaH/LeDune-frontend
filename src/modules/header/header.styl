.logo
  width: 20%

.text
  width: 28%

.menu
  width: 29%

  ul
    margin: 0
    padding: 0
    line-height: 0
    font-size: 0
    text-align: justify

    @media (max-width: $breakpoint-sm - 1)
      text-align: center

    &:after
      content: ''
      display: inline-block
      width: 100%
      height: 0

      @media (max-width: $breakpoint-sm - 1)
        display: none


  li
    font-size: $font-size
    display: inline-block
    vertical-align: middle
    line-height: normal

    @media (max-width: $breakpoint-sm - 1)
      margin: 1em

  a
    text-decoration: none
    color: $blue

    @media (max-width: $breakpoint-md - 1)
      font-size: .8em

    &:hover
      text-decoration: underline

.contacts
  width: 23%
  text-align: right

.logo,
.text,
.menu,
.contacts
  @media (max-width: $breakpoint-sm - 1)
    width: 100%
    text-align: center


.img
  max-width: 100%

  @media (max-width: $breakpoint-sm - 1)
    margin-top: .5em


.text
  color: $blue
  &-inner
    @media (max-width: $breakpoint-lg - 1)
      font-size: .8em

    @media (max-width: $breakpoint-md - 1) and (min-width: $breakpoint-sm)
      font-size: .6em


.phone
  ffA()
  font-size: 1.8em
  color: $blue

  @media (max-width: $breakpoint-lg - 1) and (min-width: $breakpoint-sm)
    font-size: 1.5em

  @media (max-width: $breakpoint-md - 1) and (min-width: $breakpoint-sm)
    font-size: 1.2em

.work
  ffA()
  color: $blue
  line-height: .5

  @media (max-width: $breakpoint-md - 1) and (min-width: $breakpoint-sm)
    font-size: .8em

.callback
  border: 0
  margin: 0
  padding: 0
  background-color: transparent
  font-size: .9em
  color: $gold3
  margin-top: 1em
  cursor: pointer
  text-decoration: underline

  @media (max-width: $breakpoint-md - 1) and (min-width: $breakpoint-sm)
    font-size: .6em

  &:hover
    text-decoration: none

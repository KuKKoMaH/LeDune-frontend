.title
  ffA()
  font-size: 3em
  color: $gold

.option
  font-size: 1.1em
  margin-bottom: 2em
  line-height: 33px
  padding-left: 50px
  position: relative
  @media (max-width: $breakpoint-md - 1)
    padding-left: 35px


  &:before
    content: ''
    position: absolute
    left: 0
    top: 17px
    transform: translateY(-50%)


.place:before
  background: url(../../modules/catalog/sprite-place.svg)
.phone:before
  background: url(../../modules/catalog/sprite-phone.svg)
.email:before
  background: url(sprite-mail.svg)
.work:before
  background: url(sprite-work.svg)

.param
  float: left
  font-weight: 400

  @media (max-width: $breakpoint-md - 1)
    float: none

.value
  margin-left: 250px
  line-height: $line-height

  @media (max-width: $breakpoint-md - 1)
    margin-left: 0

:global(#map)
  height: 400px
  background-position: 50% 50%

  @media (max-width: $breakpoint-sm - 1)
    margin-left: -($gutter-half)
    margin-right: -($gutter-half)

.pictures
  border-top: 1px solid $gold
  padding-top: 1em
  margin-top: 1em
  text-align: justify

  &:after
    content: ''
    display: inline-block
    width: 100%
    height: 0

.pic
  width: 49%